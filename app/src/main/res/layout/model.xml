<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingLeft="5dp"
    android:paddingRight="5dp"

    tools:context=".ContactsAdapter">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="5dp"
        app:cardCornerRadius="2dp"
        app:contentPadding= "5dp"
        app:cardBackgroundColor="@color/white_transparent"
        app:cardUseCompatPadding="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/first_name"
                    android:text="Krystian"
                    android:textSize="18dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/last_name"
                    android:text="Chalimoniuk"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/first_name"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="192.168.1.101"
                    android:layout_marginLeft="3dp"
                    android:layout_below="@+id/last_name"
                    android:textSize="18dp"
                    android:id="@+id/ip_address"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@android:drawable/sym_action_call"
                    android:id="@+id/cart"



                    />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>